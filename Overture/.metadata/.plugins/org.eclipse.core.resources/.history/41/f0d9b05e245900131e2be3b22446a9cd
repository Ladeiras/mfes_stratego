class Piece

	instance variables
		public position : Position;
		public rank : Rank;
		
	inv rank.name = "four" or
			rank.name = "one" or
			rank.name = "two" or
			rank.name = "three" or
			rank.name = "four" or
			rank.name = "five" or
			rank.name = "six" or
			rank.name = "seven" or
			rank.name = "eight" or
			rank.name = "nine" or
			rank.name = "spy" or
			rank.name = "bomb" or
			rank.name = "flag" or
			rank.name = "null";
			
		inv cases rank.name :
			"water", "bomb", "flag", "null" -> rank.movement = 0,
			"spy" -> rank.movement = 9,
			others -> rank.movement = 1
			end;
	
		inv position.column <= 9;
		inv position.row <= 9;

	operations
		public Piece : Rank*Position ==> Piece
			
		
end Piece